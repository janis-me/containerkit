{
  "name": "@containerkit/react",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "imports": {
    "#*": [
      "./src/*.js",
      "./src/*.ts",
      "./src/*.tsx",
      "./src/*/index.ts"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "format": "prettier . --write",
    "test": "pnpm -w test --project=containerkit",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "containerkit": "workspace:*",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "devDependencies": {
    "@containerkit/linter-config": "workspace:*",
    "@containerkit/typescript-config": "workspace:*",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "tsdown": "catalog:build",
    "typescript": "catalog:build"
  }
}
