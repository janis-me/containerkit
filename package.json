{
  "name": "@janis.me/repo-starter",
  "description": "A starter template for pnpm-based web repositories",
  "keywords": [
    "janis.me"
  ],
  "homepage": "https://janis.me",
  "license": "MIT",
  "author": "Janis Jansen",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter=!./examples/** build",
    "build:watch": "pnpm --parallel --filter=!./examples/** build:watch",
    "deps": "pnpm taze",
    "format": "prettier --write .",
    "lint": "eslint --flag v10_config_lookup_from_file .",
    "test": "vitest"
  },
  "devDependencies": {
    "@containerkit/linter-config": "workspace:*",
    "@containerkit/typescript-config": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "catalog:format",
    "@maz-ui/changelogen-monorepo": "catalog:script",
    "@playwright/test": "catalog:test",
    "@vitest/browser": "catalog:test",
    "eslint": "catalog:lint",
    "jiti": "catalog:lint",
    "prettier": "catalog:format",
    "prettier-plugin-packagejson": "catalog:format",
    "taze": "catalog:script",
    "typescript": "catalog:build",
    "vitest": "catalog:test"
  },
  "packageManager": "pnpm@10.21.0",
  "engines": {
    "node": ">=22.11.0"
  }
}
